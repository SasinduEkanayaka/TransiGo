<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="120"
                android:startColor="#11998e"
                android:centerColor="#38ef7d"
                android:endColor="#4facfe"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Radial overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:gradientRadius="800dp"
                android:centerX="0.7"
                android:centerY="0.3"
                android:startColor="#40ffffff"
                android:endColor="#00ffffff"
                android:type="radial" />
        </shape>
    </item>
    
    <!-- Bottom shadow -->
    <item android:top="400dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#15000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
